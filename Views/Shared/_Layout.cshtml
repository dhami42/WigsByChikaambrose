<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WigsByChikaambrose</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Meta Tags -->
    <meta name="description" content="Premium quality wigs by Chikaambrose - World-class wig collection">
    <meta name="keywords" content="wigs, lace wigs, synthetic wigs, human hair, beauty, hair extensions">
    <meta name="author" content="WigsByChikaambrose">
</head>
<body>
    <!-- Special Offers Banner -->
    <div class="offer-banner">
        🎉 FREE SHIPPING on orders over $150 | Professional Installation Available | 30-Day Returns | Limited Time: 20% OFF Premium Wigs! 🎉
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-crown me-2" style="font-size: 1.5rem;"></i>
                <span>WigsByChikaambrose</span>
            </a>
            
            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-shopping-bag me-1"></i>Products
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product")">
                                <i class="fas fa-th-large me-2"></i>All Products
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product", new { wigType = 6 })">
                                <i class="fas fa-star me-2 text-warning"></i>Lace Front Wigs
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product", new { wigType = 1 })">
                                <i class="fas fa-magic me-2 text-info"></i>Synthetic Wigs
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product", new { wigType = 2 })">
                                <i class="fas fa-gem me-2 text-success"></i>Human Hair Wigs
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product", new { wigType = 3 })">
                                <i class="fas fa-puzzle-piece me-2 text-danger"></i>Closures
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Product", new { wigType = 4 })">
                                <i class="fas fa-crown me-2 text-primary"></i>Frontals
                            </a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="fas fa-info-circle me-1"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">
                            <i class="fas fa-envelope me-1"></i>Contact
                        </a>
                    </li>
                </ul>
                
                <!-- Right Side Actions -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Search -->
                    <form class="d-none d-md-flex" asp-controller="Product" asp-action="Index" method="get">
                        <div class="input-group">
                            <input class="form-control" type="search" name="search" placeholder="Search wigs..." 
                                   value="@ViewBag.CurrentSearch" style="width: 200px;">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    
                    <!-- Wishlist -->
                    <button class="btn btn-outline-primary position-relative">
                        <i class="fas fa-heart"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </button>
                    
                    <!-- Cart -->
                    <button class="btn btn-outline-primary position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                        </span>
                    </button>
                    
                    <!-- Theme Toggle -->
                    <button class="theme-toggle" onclick="toggleTheme()" title="Toggle Dark Mode">
                        <i class="fas fa-moon"></i>
                        <span class="theme-text ms-2 d-none d-md-inline">Dark</span>
                    </button>
                    
                    <!-- User Account -->
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-user-circle me-2"></i>My Profile
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-box me-2"></i>My Orders
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-heart me-2"></i>Wishlist
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="fas fa-sign-in-alt me-2"></i>Login / Register
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="mt-5">
        <div class="container">
            <div class="row g-4">
                <!-- Brand Section -->
                <div class="col-lg-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-crown me-2 text-brand" style="font-size: 1.5rem;"></i>
                        <h5 class="mb-0 text-brand">WigsByChikaambrose</h5>
                    </div>
                    <p class="mb-3">
                        Your premier destination for world-class wigs and hair solutions. 
                        Transform your look with our premium collection of synthetic and human hair wigs.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product")" class="text-decoration-none">All Products</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")" class="text-decoration-none">About Us</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")" class="text-decoration-none">Contact</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Size Guide</a></li>
                    </ul>
                </div>
                
                <!-- Categories -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3">Categories</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Product", new { wigType = 6 })" class="text-decoration-none">Lace Front</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product", new { wigType = 1 })" class="text-decoration-none">Synthetic</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product", new { wigType = 2 })" class="text-decoration-none">Human Hair</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product", new { wigType = 3 })" class="text-decoration-none">Closures</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Product", new { wigType = 4 })" class="text-decoration-none">Frontals</a></li>
                    </ul>
                </div>
                
                <!-- Customer Service -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3">Customer Service</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-decoration-none">Help Center</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Shipping Info</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Returns</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Size Guide</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Care Instructions</a></li>
                    </ul>
                </div>
                
                <!-- Newsletter -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3">Stay Updated</h6>
                    <p class="small mb-3">Subscribe for exclusive offers and new arrivals</p>
                    <form class="mb-3">
                        <div class="input-group input-group-sm">
                            <input type="email" class="form-control" placeholder="Your email">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                    <div class="d-flex align-items-center gap-2 small">
                        <i class="fas fa-phone text-primary"></i>
                        <span>+234 8166309083</span>
                    </div>
                </div>
            </div>
            
            <!-- Bottom Bar -->
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 small">
                        &copy; 2026 WigsByChikaambrose. All rights reserved. | 
                        <a href="#" class="text-decoration-none">Privacy Policy</a> | 
                        <a href="#" class="text-decoration-none">Terms of Service</a>
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end gap-2">
                        <img src="https://via.placeholder.com/40x25/667eea/ffffff?text=VISA" alt="Visa" class="rounded">
                        <img src="https://via.placeholder.com/40x25/667eea/ffffff?text=MC" alt="Mastercard" class="rounded">
                        <img src="https://via.placeholder.com/40x25/667eea/ffffff?text=AMEX" alt="American Express" class="rounded">
                        <img src="https://via.placeholder.com/40x25/667eea/ffffff?text=PP" alt="PayPal" class="rounded">
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
